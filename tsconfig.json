{
  "compilerOptions": {
    "module": "commonjs",
    "esModuleInterop": true,
    "target": "es5",
    "noImplicitAny": true,
    "moduleResolution": "node",
    "sourceMap": true,
    "strict": true,
    "outDir": "dist",
    "baseUrl": ".",
    "typeRoots": ["@types", "./node_modules/@types"],
    "paths": {
      "*": ["node_modules/*", "src/*"]
    },
    "rootDirs": ["src"]
  },
  "include": ["src/**/*.ts"],
  "exclude": ["node_modules", "dist"]
}
